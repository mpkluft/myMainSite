mixin slide
	.slider__item
		.row
			.col-xs-12
				.slider__description
					.slider__h1 Коммутаторы, роутеры CISCO
					p.slider__p Широкий асортимент и выгодные цены
					button.button Подробнее
				.slider__img-wrap
					img.slider__img(src="images/icon/cisco.jpg", alt="")
					img.slider__logo(src="images/icon/logo-slider.png", alt="")

mixin goods__items(img, name, description, price, quanity)
	.goods__item
		.goods__img-wrap
			img.goods__img(src= img, alt="")
		a.goods__name= name
		p.goods__description= description
		.goods__order
			span.goods__price= price
			button.button.button_goods Купить
			span.goods__quanity= quanity
			.clear
				
